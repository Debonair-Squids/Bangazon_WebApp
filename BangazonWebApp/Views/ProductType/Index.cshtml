@model BangazonWebApp.Models.ProductTypeViewModels.ProductTypeIEnumViewModel

@{
    ViewData["Title"] = "Product Categories";
}
<h2 class="top-buffer">Product Categories</h2>

@foreach (var type in Model.GroupedProducts)
{
    <div class="row">
        <div class="col-md-12">
            @* <a asp-controller="Products" asp-action="Detail" asp-route-type="@type.TypeId">*@
            <h4>@type.TypeName (@Html.DisplayFor(modelItem => type.ProductCount))</h4>
            @* </a>*@
        </div>
    </div>
    foreach (var product in type.Products)
    {
    <div class="row">
        <div class="col-md-10">
            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                @product.Name
            </a>
        </div>
        @* <div class="col-md-2">
            @product.Price.ToString("C")
        </div>*@
    </div>
    }
}
